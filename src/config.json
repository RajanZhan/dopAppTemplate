{
	"version":"1.0.2",
	"port":"81",/* 应用监听的端口 */
	"host":"127.0.0.1",//绑定的ip地址
	"debug":"1", /* 1：调试模式，0：为生产模式，用于编译成发布版本  */
	"cross":1,//1 表示可以跨域， 0 表示禁用跨域访问
	"pagination":{
		"page":"1", /*默认分页页数*/
		"psize":"30"/*默认分页条数*/
	},
	"cacheDefaultExpire":"300",/*缓存默认时间，单位 秒*/
	"staticPath":["static","dist"],/*静态目录*/
	"viewPath":"dist",/*html 模板路径*/

	/*cookie 的生肖时间 单位 秒*/
	"cookie":{
		"expire":"1200"
	},
	
	"db":{
		"host":"127.0.0.1",
		"db":"xiaomifeng",
		"uname":"root",
		"pwd":"11111111"
	},


	/*redis配置*/
	"redis":{
		"host":"127.0.0.1",
		"port":"6379",
		"pass":"123456",
		"use":"1"
	}

}
